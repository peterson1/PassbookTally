<UserControl x:Class="PassbookTally.CrudApp.TransactionLog.TransactionLogUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassbookTally.CrudApp.TransactionLog"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Right">

            <TextBlock Text="current balance :" />

            <TextBlock Text="{Binding LastBalance, StringFormat=N2}"
                       Margin="5 0 0 0" />

            <Button Command="{Binding Crud.EncodeNewDraftCmd}"
                    Content="{Binding Crud.EncodeNewDraftCmd.CurrentLabel}"
                    Margin="20 0 0 0" />
        </StackPanel>
        
        <local:TransactionsTable DataContext="{Binding Rows}" />
    </DockPanel>
</UserControl>
