<UserControl x:Class="PassbookTally.CrudApp.TransactionLog.TransactionLogUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassbookTally.CrudApp.TransactionLog"
             xmlns:btns="clr-namespace:CommonTools.Lib45.StyledButtons;assembly=CommonTools.Lib45"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                    HorizontalAlignment="Right" Margin="0 0 20 20">

            <TextBlock Text="{Binding LastBalance, StringFormat={}current balance :  P {0:N2}}"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding LastDate, StringFormat={}(as of {0:d MMM yyyy})}"
                       Margin="7 0 0 0" />
        </StackPanel>

        <Grid>
            <local:TransactionsTable DataContext="{Binding Rows}" />
            
            <btns:EncodeNewDraftBtn1 DataContext="{Binding Crud}"
                                     Margin="30 0 0 30"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Bottom" />
        </Grid>
    </DockPanel>
</UserControl>
