<UserControl x:Class="PassbookTally.CrudApp.FundRequests.FundReqsTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassbookTally.CrudApp.FundRequests"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="dg" Style="{StaticResource dgReadOnly}"
                  ItemsSource="{Binding }">
            <DataGrid.Columns>
                <DataGridTextColumn Width="10*" Header="req #" Binding="{Binding SerialNum, StringFormat=000#}" ElementStyle="{StaticResource colCenter}" />
                <DataGridTextColumn Width="20*" Header="request date" Binding="{Binding RequestDate, StringFormat=d MMM yyyy}" ElementStyle="{StaticResource colCenter}" />
                <DataGridTextColumn Width="20*" Header="payee" Binding="{Binding Payee}" ElementStyle="{StaticResource colCenter}" />
                <DataGridTextColumn Width="30*" Header="purpose" Binding="{Binding Purpose}" ElementStyle="{StaticResource colLabel}" />
                <DataGridTextColumn Width="20*" Header="amount" Binding="{Binding Amount, StringFormat=N2}" ElementStyle="{StaticResource colRight}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
